<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity">
    <class name="ru.job4j.carstore.entity.Car" table="cars">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <many-to-one name="manufacturer"
                     column="manufacturer_id"
                     class="ru.job4j.carstore.entity.Manufacturer"/>
        <many-to-one name="body"
                     column="body_id"
                     class="ru.job4j.carstore.entity.Body"/>
        <many-to-one name="engine"
                     column="engine_id"
                     class="ru.job4j.carstore.entity.Engine"/>
        <many-to-one name="transmission"
                     column="transmission_id"
                     class="ru.job4j.carstore.entity.Transmission"/>
    </class>
</hibernate-mapping>